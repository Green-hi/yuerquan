<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="#ffffffff"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/layout_left"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical"
            android:onClick="back"
            android:orientation="vertical"
            android:paddingLeft="18.0dip">

            <ImageView
                android:layout_width="8.0dip"
                android:layout_height="15.0dip"
                android:scaleType="fitXY"
                app:tint="#ff000000"
                app:srcCompat="@drawable/back_word" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_title"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:text="宝宝成长特点"
            android:lines="1"
            android:textColor="#ff333333"
            android:textSize="18.0dip" />

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="18.0dip">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="完成"
                android:textColor="#ff333333"
                android:textSize="16.0dip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="23.0dip"
                app:tint="#ff000000"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_content_home1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#ff333333"
                        android:textSize="18.0sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="#fff8f8f8" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="fill_parent"
                        android:layout_height="8.0dip"
                        android:background="#fff8f8f8" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginRight="20.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@id/icon"
                            android:layout_width="18.0dip"
                            android:layout_height="16.0dip"
                            app:srcCompat="@mipmap/mine_by" />

                        <TextView
                            android:id="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18.0dip"
                            android:text="1——2岁"
                            android:textColor="#ff333333"
                            android:textSize="15.0sp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center|right">

                            <ImageView
                                android:id="@+id/iv_dian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6.0dip"
                                android:background="@drawable/shape_minyuan"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="个人主页"
                                android:textColor="#ff333333"
                                android:textSize="12.0sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            app:srcCompat="@mipmap/mine_next" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</LinearLayout>


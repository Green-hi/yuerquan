<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pull_button"
    android:orientation="vertical">

    <View
        android:id="@+id/top_view"
        android:layout_width="fill_parent"
        android:layout_height="8.0dip"
        android:background="#fff8f8f8"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_head"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar3" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_toRightOf="@id/iv_head"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小明"
                    android:textColor="#ff536a9a"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/iv_guangfang"
                    android:layout_width="wrap_content"
                    android:layout_height="22.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:visibility="gone"
                    app:srcCompat="@mipmap/icon_pyq_guangfang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="孕12周+3天"
                    android:textColor="#ff999999"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:textColor="#ff999999"
                    android:textSize="13.0sp" />

                <ImageView
                    android:id="@+id/iv_suo"
                    android:layout_width="12.0dip"
                    android:layout_height="14.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:visibility="gone"
                    app:srcCompat="@mipmap/pyq_suo" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_follow_normal"
            android:paddingLeft="15.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="4.0dip"
            android:text="关注"
            android:textColor="#ff999999"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_followed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已关注"
            android:textColor="#ffc8c8c8"
            android:textSize="14.0sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="44.0dip"
            android:gravity="center|right"
            android:paddingLeft="18.0dip"
            android:paddingRight="18.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/down" />
        </LinearLayout>
    </LinearLayout>

    <!--<com.taopao.verificationinput.ExpandableTextView
        android:id="@id/contentTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="16.0dip"
        app:contentTextColor="#ff333333"
        app:contentTextSize="16.0sp"
        app:maxCollapsedLines="4"
        app:showExpandCollapseDrawable="false"
        app:textCollapse="@string/shink"
        app:textExpand="@string/expand" />-->

    <com.ms.square.android.expandabletextview.ExpandableTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="16.0dip"
        app:maxCollapsedLines="4"
        android:id="@+id/tv_expand">

        <TextView
            android:id="@id/expandable_text"
            android:textColor="#ff333333"
            android:textSize="15.0sp"
            android:text="@string/test_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/down" />

    </com.ms.square.android.expandabletextview.ExpandableTextView>


    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/ninegrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="16.0dip"
        android:visibility="gone"
        app:imgGap="5.0dip"
        app:showStyle="grid" />

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="16.0dip"
        android:background="#fff8f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_sharimg"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/baby7" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="怎么哄小宝宝睡觉呀？最近sadsdsadsadsadsadsadsadsadsdsd宝宝特别烦 躁，晚上不睡觉，还一直哭，第一次…"
            android:textColor="#ff666666"
            android:textSize="14.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:text=""
        android:textColor="#ff758cc0"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/tv_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/food_text_bg"
        android:paddingLeft="10.0dip"
        android:paddingTop="1.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="1.0dip"
        android:text=""
        android:textColor="#ff758cc0"
        android:textSize="12.0sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_sharepyq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="38.0dip"
            android:paddingTop="19.0dip"
            android:paddingBottom="18.0dip">

            <ImageView
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                app:srcCompat="@mipmap/pyq_share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="分享"
                android:textColor="#ff333333"
                android:textSize="13.0sp" />
        </LinearLayout>

        <Space
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="19.0dip"
            android:paddingBottom="18.0dip">

            <ImageView
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                app:srcCompat="@mipmap/pyq_comment" />

            <TextView
                android:id="@id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="1"
                android:textColor="#ff333333"
                android:textSize="13.0sp" />
        </LinearLayout>

        <Space
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:id="@+id/ll_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="19.0dip"
            android:paddingRight="38.0dip"
            android:paddingBottom="18.0dip">

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                app:srcCompat="@mipmap/pyq_liked" />

            <TextView
                android:id="@+id/tv_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="16"
                android:textColor="#ff333333"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_view"
        android:layout_width="fill_parent"
        android:layout_height="8.0dip"
        android:background="#fff8f8f8" />
</LinearLayout>
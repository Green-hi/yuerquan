<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/common_tab_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="18.0dip"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_qiehuan"
            android:layout_width="17.0dip"
            android:layout_height="17.0dip"
            app:srcCompat="@mipmap/icon_jkthome" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_choosepz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="3.0dip">

            <TextView
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="育儿日志"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:src="@mipmap/icon_nb_sj"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_add_diary_unique"
        android:layout_width="60.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/common_tab_bg"
        android:clickable="true"
        android:gravity="end|center"
        android:orientation="horizontal"
        android:paddingRight="18.0dip">

        <ImageView
            android:id="@+id/iv_add_diary"
            android:layout_width="27.0dip"
            android:layout_height="27.0dip"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/btn_add" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/community_back"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical"
            android:onClick="back"
            android:orientation="vertical"
            android:paddingLeft="18.0dip">

            <ImageView
                android:layout_width="8.0dip"
                android:layout_height="15.0dip"
                android:scaleType="fitXY"
                app:tint="#ff000000"
                app:srcCompat="@drawable/back_word" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_title"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:text="朋友圈"
            android:lines="1"
            android:textColor="#ff333333"
            android:textSize="18.0dip" />

        <LinearLayout
            android:id="@+id/community_release"
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="18.0dip">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="发布"
                android:textColor="#ff333333"
                android:textSize="16.0dip"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="23.0dip"
                app:tint="#ff000000"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_content_community"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:gravity="left"
                android:hint="这一刻的想法..."
                android:minLines="6"
                android:padding="15.0dip"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="110.0dip"
                    android:layout_height="110.0dip"
                    android:layout_margin="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/add_community_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/fx_icon_tag_add"/>

                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15.0dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_baby_diary_ys"
                    android:drawablePadding="5.0dip"
                    android:text="隐私设置"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="仅自己可见"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    app:tint="@color/text_hint_color"
                    app:srcCompat="@drawable/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_baby_diary_address"
                    android:drawablePadding="5.0dip"
                    android:text="添加位置"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@id/tv_address"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:hint="@string/diary_address"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    app:srcCompat="@drawable/right_arrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_baby_diary_time"
                    android:drawablePadding="5.0dip"
                    android:text="谁可以看"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@id/tv_time"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="公开"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    app:srcCompat="@drawable/right_arrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
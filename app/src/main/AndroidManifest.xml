<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenhi.lalababy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.greenhi.lalababy.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".activity.CameraActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SetActivity"
            android:exported="true" />
        <activity
            android:name=".activity.Home4Activity"
            android:exported="true" />
        <activity
            android:name=".activity.Home3Activity"
            android:exported="true" />
        <activity
            android:name=".activity.Home2Activity"
            android:exported="true" />
        <activity
            android:name=".activity.Home1Activity"
            android:exported="true" />
        <activity
            android:name=".activity.AddCommunityActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddDiaryActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"></activity>
        <activity
            android:name=".activity.TestActivity"
            android:exported="true" />
    </application>

</manifest>